<body class="fixed-nav sticky-footer bg-dark" id="page-top">
  <%= render partial: "shared/navigation", object: @study_path %>
  <div class="content-wrapper">
    <div class="container-fluid">
      <!-- Breadcrumbs-->
      <ol class="breadcrumb">
        <li class="breadcrumb-item">
          <a href="/student/dashboard">Student</a>
        </li>
        <li class="breadcrumb-item active">Study Path</li>
      </ol>

      <% if @my_study_path.nil? %>
        <div class="text-center center-middle-text">
          <div class="col-12">
            <i class="fa fa-fw fa-frown-o fa-4x"></i>
            <br>
            <h3>No Study Path Found</h3>
            <p>It seems that the division haven't uploaded a study path of the degree program yet.</p>
            <br>
            <%= link_to "Add New Study Path", new_study_path_path, class: 'btn btn-primary btn-md open-sans-font', role: 'button' %>
          </div>
        </div>
      <% else %>
        <div class="row">
          <div class="col-lg-12">
            <div class="card mb-3">
              <div class="card-header">
                <div class="text-left">
                  <strong>Program Code : </strong><span><%= @my_study_path.degree_id %></span>
                </div>
                <div class="text-left">
                  <strong>Program Revision Code : </strong><span><%= @my_study_path.program_revision_code %></span>
                </div>
                <div class="text-left">
                  <strong>Name : </strong><span><%= @basic_info['degree_program'] %></span>
                </div>
                <div class="text-left">
                  <strong>Title : </strong><span><%= @my_study_path.title %></span>
                </div>
                <%= link_to edit_study_path_path(@study_path), class: 'btn btn-success btn-sm', role: 'button' do %>
                  <i class="fa fa-fw fa-edit"></i> Edit
                <% end %>
                <%= link_to study_path_path(@study_path), data: {:confirm => 'Are you sure you want to delete this study plan? Deleting this means that no student can access it.'}, :method => :delete, class: 'btn btn-danger btn-sm', role: 'button' do %>
                  <i class="fa fa-fw fa-trash"></i> Delete
                <% end %>
              </div>
              <div class="card-body">
                <div class="table-responsive">
                  <table class="table table-bordered" width="100%" cellspacing="0">
                    <thead class="thead-light">
                      <tr>
                        <th>Subject</th>
                        <th>Name</th>
                        <th>Units</th>
                        <th>Prerequisites</th>
                        <th>Grade</th>
                      </tr>
                    </thead>
                    <tbody>
                      <tr class="table-primary">
                        <td colspan="5">
                          <h6 class="d-inline">First Year - First Semester</h6>
                          <div class="d-inline float-right">
                            <%= link_to update_subjects_path(@study_path, "year" => "First", "semester" => "First"), class: 'btn btn-warning btn-sm', role: 'button' do %>
                              <i class="fa fa-fw fa-plus-square"></i> Update Subjects
                            <% end %>
                          </div>                        
                        </td>
                      <tr>  
                    </tbody>
                    <tbody>
                      <tr>
                        <td colspan="5">No subjects so far.</td>
                      </tr>
                    </tbody>
                  </table>
                </div>
              </div>
              <div class="card-header">   
              </div>
            </div>
          </div>
        </div>
      <% end %>
      <%= render "shared/logout_modal" %>
    </div>
    <%= render "shared/footer" %>
  </div>
</body>
